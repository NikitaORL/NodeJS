<h1>Muuda uudist</h1>

<% if (errors.length > 0) { %>
    <% errors.forEach(error => { %>
        <p class="error"><%= error.msg %></p>
    <% }) %>
<% } %>

<form action="/news/<%= news.id %>/edit" method="POST">
    <input type="text" name="title" value="<%= values.title %>" required><br>
    <textarea name="content" required><%= values.content %></textarea><br>
    <button type="submit">Salvesta</button>
</form>
<a href="/">Tagasi avalehele</a>
