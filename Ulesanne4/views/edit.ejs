<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Uuenda</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">

<h1 class="mb-4">Uuenda uudis</h1>

<% if(errors.length > 0){ %>
    <div class="alert alert-danger">
        <% errors.forEach(e => { %>
            <p><%= e.msg %></p>
        <% }) %>
    </div>
<% } %>

<form action="/edit/<%= news.id %>" method="POST">
    <div class="mb-3">
        <label class="form-label">Pealkiri</label>
        <input type="text" name="title" class="form-control" value="<%= values.title %>">
    </div>
    <div class="mb-3">
        <label class="form-label">Sisu</label>
        <textarea name="content" class="form-control" rows="5"><%= values.content %></textarea>
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Salvesta</button>
        <a href="/" class="btn btn-secondary">TÃ¼hista</a>
        <a href="/delete/<%= news.id %>" class="btn btn-danger">Kustuta</a>
    </div>
</form>

</body>
</html>
